{
  "appId": "help-chat",
  "productName": "help-chat",

  "nsis": {
    "include": "static/installer.nsh"
  },
  "extraMetadata": {
    "main": "build/main.js"
  },
  "asar": true,
  "directories": {
    "output": "dist",
    "buildResources": "static/app-icons"
  },
  "files": ["build/**/*", "package.json"],
  "publish": "github",
  "linux": {
    "category": "Network",
    "target": [
      {
        "target": "AppImage",
        "arch": ["ia32", "x64"]
      }
    ]
  },
  "win": {
    "target": ["zip", "nsis"]
  },
  "mac": {
    "category": "public.app-category.navigation"
  }
}
